{
  "Routes": [
    //Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/Products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Products",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 10,
        "Limit": 2,
        "DisableRateLimitHeaders": false,
        "QuotaExceededMessage": "Too Many Requests",
        "HttpStatusCode": 429,
        "ClientIdHeader": "MyRateLimiting"
      },
      "FileCacheOptions": {
        "TtlSeconds": 10
      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/Products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "catalog.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Products/{id}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Basket?userName={userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basket.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Basket?userName={userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Basket API
    {
      "DownstreamPathTemplate": "/api/v1/Basket/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basket.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Basket/{userName}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Basket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "basket.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Basket",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //Order API
    {
      "DownstreamPathTemplate": "/api/v1/Order",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ordering.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Order",
      "UpstreamHttpMethod": [ "POST", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Order/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ordering.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Order/{id}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Order/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "ordering.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Order/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //Discount API
    {
      "DownstreamPathTemplate": "/api/v1/Coupon/{productName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Coupon/{productName}",
      "UpstreamHttpMethod": [ "GET", "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Coupon",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "discount.api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/Coupon",
      "UpstreamHttpMethod": [ "POST" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5068"
  }
}

